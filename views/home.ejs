<%- include("partials/header") -%>

<h1>Home</h1>
<br>
<form action="/compose">
    <button class="btn btn-info" type="submit" style="display: block; margin: 0 auto; background-color:#215cb3; border: 0;">Add new entry</button>
</form>
<p><%= homeStartingContent %></p>

<% posts.forEach( (post) => { %>
    <h1 style="color: #5b616d;"><%= post.title %></h1>
    <p><%= _.truncate(post.body, {"length": 150, "omission": "..."}) %>
    <br>
    <form action="/posts/<%= post._id %>">
        <button name="postID" value="<%= post._id %>" onclick="this.form.submit()" style="background-color: white; border: white; color: blue;">read more</button>
    </form>
    <form action="/delete" method="post">
        <button name="postID" value="<%= post._id %>" onclick="this.form.submit()" style="background-color: white; border: white; color: orange;">delete</button>
    </form>
<% }) %>

<%- include("partials/footer") -%>
