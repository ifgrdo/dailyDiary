<%- include("partials/header") -%>

<h1>Home</h1>
<br>
<form action="/compose">
    <button class="btn btn-info" type="submit" style="display: block; margin: 0 auto;">Add new entry</button>
</form>
<p><%= homeStartingContent %></p>

<% postArray.forEach( (post) => { %>
    <h1><%= post.title %></h1>
    <p><%= _.truncate(post.body, {"length": 100, "omission": "..."}) %>
    <a href="/posts/<%= post.title %>">Read More</a>
    </p>
<% }) %>

<%- include("partials/footer") -%>
